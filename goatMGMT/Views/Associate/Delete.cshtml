            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.street)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.street)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.city)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.city)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.state)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.state)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.zip)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.zip)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.telephone)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.telephone)
                    </div>
