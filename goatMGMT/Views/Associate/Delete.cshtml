@model goatMGMT.Models.Associate

@{
    ViewBag.Title = "Delete Associate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this Associate?</h3>
