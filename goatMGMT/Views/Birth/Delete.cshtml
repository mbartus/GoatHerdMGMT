@model goatMGMT.Models.BirthViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <h2>Details</h2>

    <fieldset>
        <legend>Birth</legend>
        @Html.HiddenFor(m => m.birth.Animal.id)
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.offspring_tag)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.offspring_tag)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.mother_tag)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.mother_tag)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.father_tag)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.father_tag)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.birth.Animal.dob)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.birth.Animal.dob)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.birth.score)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.birth.score)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.birth.alive)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.birth.alive)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.birth.born)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.birth.born)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.birth.notes)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.birth.notes)
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color" style="padding-bottom: 15px;">
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">Delete</button>
            @Html.ActionLink("Cancel", "Index", "Birth", new { id2 = Model.birth.father_id, id3 = Model.birth.mother_id },  new { @class = "btn btn-default" })
        </div>

    <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="Are you sure?" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Are you sure?</h4>
                    </div>
                    <div class="modal-body">
                        This data will be permenately deleted and you will not be able to recover it.
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Delete" class="btn btn-danger" data-toggle="modal" data-target="#myModal" />
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>