@model goatMGMT.Models.BreedingViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <h2>Details</h2>

    <fieldset>
        <legend>Breeding</legend>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.mother_tag)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.mother_tag)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.breeding.mother_id)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.mother_name)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.father_tag)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.father_tag)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.breeding.father_id)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.father_name)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.breeding.date)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.breeding.date)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.breeding.pregnancy_check)</h3>
                    </div>
                    <div class="panel-body">
                        @if (Model.breeding.pregnancy_check == null)
                        {
                            @Html.Raw("Unknown")
                        }
                        else if ((bool)Model.breeding.pregnancy_check)
                        {
                            @Html.Raw("Yes")
                        }
                        else
                        {
                            @Html.Raw("No")
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.breeding.expected_kidding_date)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.breeding.expected_kidding_date)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.breeding.expected_birthing_date)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.breeding.expected_birthing_date)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.breeding.remarks)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.breeding.remarks)
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color" style="padding-bottom: 15px;">
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">Delete</button>
            @Html.ActionLink("Cancel", "Index", "Breeding", new { @class = "btn btn-default" })
        </div>

    <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="Are you sure?" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Are you sure?</h4>
                    </div>
                    <div class="modal-body">
                        <b>Deleting a breeding will delete every birth associated with it.</b> <br />
                        This data will be permenately deleted and you will not be able to recover it.
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Delete" class="btn btn-danger" data-toggle="modal" data-target="#myModal" />
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>