@model goatMGMT.Models.FAQ

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="padding-bottom:15px;">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <fieldset>
        <legend>FAQ</legend>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@Html.DisplayNameFor(model => model.question)</h3>
            </div>
            <div class="panel-body">
                @Html.DisplayFor(model => model.question)
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@Html.DisplayNameFor(model => model.answer)</h3>
            </div>
            <div class="panel-body">
                @Html.DisplayFor(model => model.answer)
            </div>
        </div>
    </fieldset>
    @using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger"/>
        @Html.ActionLink("Cancel", "Index", "FAQ", new { @class="btn btn-default"})
    </div>
    }
</div>