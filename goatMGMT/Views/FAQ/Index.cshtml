@model IEnumerable<goatMGMT.Models.FAQ>

    @{
    ViewBag.Title = "FAQ's";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <div class="container">
        <h2>FAQ's</h2>

        <p style="margin-top:15px;">
            @Html.ActionLink("Create New", "Create", "FAQ", new { @class = "btn btn-success" })
        </p>
        <div class="table-responsive" style="margin-top:15px; margin-bottom: 15px;">
            <table class="table table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(item => item.question)
                    </th>
                    <th>
                        @Html.DisplayNameFor(item => item.answer)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.question)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.answer)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.id })
                    </td>
                </tr>
                }

            </table>
        </div>
    </div>
