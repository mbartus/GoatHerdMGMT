@{
    ViewBag.Title = "Goat Herd Management";  
}

<div id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="/Content/imgs/k_barn1.jpg" style="width:100%" class="img-responsive">
            <div class="container">
                <div class="carousel-caption">
                    <h2>FARMSconnect</h2>
                    <p>An easy, affordable, and efficient way to manage your herd</p>
                    <p>
                        <a class="btn btn-large btn-primary" href="~/Home/About">Learn More</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/imgs/k_herd.jpg" class="img-responsive">
            <div class="container">
                <div class="carousel-caption">
                    <h2>FARMSconnect</h2>
                    <p>Record information about your herd and compare to others</p>
                    <p><a class="btn btn-large btn-primary" href="~/Home/About">Learn more</a></p>
                </div>
            </div>
        </div>
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="icon-next"></span>
    </a>
</div>
<!-- /.carousel -->

<div class="row" style="padding-bottom:50px">
    <div class="col-md-6 info-block">
        <h3 style="text-align:center">Why Record Data?</h3>
        <div>
            <div class="list-group">
                <a class="list-group-item list-group-item-success">Easy to measure herd productivity</a>
                <a class="list-group-item list-group-item-success">No more guessing</a>
                <a class="list-group-item list-group-item-success">Quickly visualize or summarize your records</a>
                <a href="~/Home/About" class="list-group-item list-group-item-info">Learn more about why record keeping is important&nbsp;›</a>
            </div>
        </div>
        <div class="text-center align-base">
            <img src="~/Content/imgs/k_goat1.jpg" alt="goat1" width="250" height="200">
        </div>
    </div>

    <div class="col-md-6 info-block">
        <h3 style="text-align:center">Join the Herd</h3>
        <div>
            <div class="list-group">
                <a class="list-group-item list-group-item-success">Anyone who wants to manage thier herd efficiently</a>
                <a class="list-group-item list-group-item-success">Easy and affordable to use</a>
                <a class="list-group-item list-group-item-success">Maximize efficiency of your herd</a>
                <a href="~/Home/About" class="list-group-item list-group-item-info">Learn more about why record keeping is important&nbsp;›</a>
            </div>
        </div>
        <div class="text-center">
            <img src="~/Content/imgs/k_goat3.jpg" alt="goat3" width="250" height="200">
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#active-home").addClass("active");
    });
</script>