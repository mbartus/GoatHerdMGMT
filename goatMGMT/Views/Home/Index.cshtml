@{
    ViewBag.Title = "Goat Herd Management";  
}

<div id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <img src="/Content/imgs/Farm2.jpg" style="width:100%" class="img-responsive">
            <div class="container">
                <div class="carousel-caption">
                    <h1>FARMSconnect</h1>
                    <p>An easy, affordable, and efficient way to manage your herd</p>
                    <p>
                        <a class="btn btn-large btn-primary" href="~/Home/About">Learn More</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="/Content/imgs/Farm1.jpg" class="img-responsive">
            <div class="container">
                <div class="carousel-caption">
                    <h1>FARMSconnect</h1>
                    <p>Record information about your herd and compare to others</p>
                    <p><a class="btn btn-large btn-primary" href="~/Home/About">Learn more</a></p>
                </div>
            </div>
        </div>
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="icon-next"></span>
    </a>
</div>
