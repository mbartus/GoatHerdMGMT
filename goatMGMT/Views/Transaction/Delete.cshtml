@model goatMGMT.Models.Transaction

@{
    ViewBag.Title = "Delete Transaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this Transaction?</h3>
    <fieldset>
        <legend></legend>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.type)</h3>
                    </div>
                    <div class="panel-body">
                            @if (Model.type)
                            {
                                @Html.Raw("Income")
                            }
                            else
                            {
                                @Html.Raw("Expense")
                            }
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.item_type)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.item_type)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.date)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.date)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.quantity)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.quantity)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.unit_price)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.unit_price)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.total_payment)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.total_payment)
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.notes)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.notes)
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
    @using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-actions no-color" style="padding-bottom: 15px;">
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">Delete</button>
        @Html.ActionLink("Cancel", "Index", "Associate", new { @class = "btn btn-default" })
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="Are you sure?" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Are you sure?</h4>
                </div>
                <div class="modal-body">
                    This data will be permenately deleted and you will not be able to recover it.
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Delete" class="btn btn-danger" data-toggle="modal" data-target="#myModal" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    }
</div>