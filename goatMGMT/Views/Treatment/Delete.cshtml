@model goatMGMT.Models.TreatmentViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <fieldset>
        <legend>Treatment</legend>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Animals's Tag</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.animal_tag)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Animal's Name</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.animal_name)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.treatment.date)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.treatment.date)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.treatment.item_type)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.treatment.item_type)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.treatment.dosage)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.treatment.dosage)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.treatment.product)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.treatment.product)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.treatment.remarks)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.treatment.remarks)
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color" style="padding-bottom: 15px;">
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">Delete</button>
            @Html.ActionLink("Cancel", "Index", "Treatment", new { @class = "btn btn-default" })
        </div>
    <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="Are you sure?" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Are you sure?</h4>
                    </div>
                    <div class="modal-body">
                        This data will be permenately deleted and you will not be able to recover it.
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Delete" class="btn btn-danger" data-toggle="modal" data-target="#myModal" />
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>