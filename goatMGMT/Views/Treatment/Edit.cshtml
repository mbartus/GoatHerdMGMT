@model goatMGMT.Models.TreatmentViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
<h2>Edit</h2>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.treatment.id)
    @Html.HiddenFor(model => model.treatment.animal_id)
    <fieldset class="form-horizontal">
        <legend>Treatment</legend>

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayNameFor(model => model.treatment.animal_id)</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.animal_name)
                    </div>
                </div>
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.treatment.date, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.treatment.date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.treatment.date, null, new { @class = "help-inline" })
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.treatment.item_type, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(model => model.treatment.item_type, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.treatment.item_type, null, new { @class = "help-inline" })
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.treatment.dosage, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(model => model.treatment.dosage, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.treatment.dosage, null, new { @class = "help-inline" })
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.treatment.product, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(model => model.treatment.product, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.treatment.product, null, new { @class = "help-inline" })
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.treatment.remarks, new { @class = "control-label" })
            <div class="controls">
                @Html.TextAreaFor(model => model.treatment.remarks, new { @class = "form-control", @style = "max-width:100%; min-width:100%; min-height:71px" })
                @Html.ValidationMessageFor(model => model.treatment.remarks, null, new { @class = "help-inline" })
            </div>
        </div>


        <div class="form-actions no-color" style="padding-bottom:15px">
            <input type="submit" value="Save" class="btn btn-success" style="margin-top:15px;" />
            @Html.ActionLink("Cancel", "Index", "Treatment", new { @class = "btn btn-danger", @style = "margin-top:15px;" })
        </div>
    </fieldset>
}
    </div>
@section Scripts {
    <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/bundles/jqueryval")"></script>
}

